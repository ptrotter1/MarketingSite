@page "/contact"
@attribute [StreamRendering]

<PageTitle>Contact</PageTitle>

<!-- Contact Page -->
<section class="contact-hero py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 fw-bold mb-3">Let's Transform Your Business Together</h1>
                <p class="lead text-muted">
                    Ready to stop wasting time on repetitive tasks? I'm here to help you streamline your operations and get back
                    to what you do best.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="contact-info py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <!-- Contact Cards -->
                <div class="row g-4 mb-5">
                    
                    <!-- Location Info -->
                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center">
                            <i class="bi bi-geo-alt-fill text-danger fs-4 me-2"></i>
                            <div class="text-start">
                                <h4 class="h6 mb-0">Proudly Serving Princeton, IL and Surrounding Areas</h4>
                                <p class="text-muted small mb-0">Available for in-person meetings throughout Bureau County</p>
                            </div>
                        </div>
                    </div>

                    <!-- Phone Card -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-5">
                                <div
                                    class="rounded-circle bg-primary bg-opacity-10 p-3 d-inline-flex align-items-center justify-content-center mb-4"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-telephone-fill fs-2 text-primary"></i>
                                </div>
                                <h3 class="h5 mb-3">Call or Text</h3>
                                <a href="tel:224-465-5871" class="fs-6 text-decoration-none fw-bold text-primary d-block mb-2">
                                    (224) 465-5871
                                </a>
                                <p class="text-muted small mb-0">Monday - Friday, 8am - 6pm CST</p>
                            </div>
                        </div>
                    </div>

                    <!-- Email Card -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-5">
                                <div
                                    class="rounded-circle bg-success bg-opacity-10 p-3 d-inline-flex align-items-center justify-content-center mb-4"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-envelope-fill fs-2 text-success"></i>
                                </div>
                                <h3 class="h5 mb-3">Send an Email</h3>
                                <a href="mailto:paultrotter88@gmail.com"
                                   class="fs-6 text-decoration-none fw-bold text-success d-block mb-2">
                                    paultrotter88@gmail.com
                                </a>
                                <p class="text-muted small mb-0">I'll respond within 24 hours</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- What to Expect -->
                <div class="bg-light rounded-3 p-5 mb-5">
                    <h3 class="h4 mb-4">What Happens Next?</h3>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="badge bg-primary rounded-circle p-2 me-3">1</div>
                                </div>
                                <div>
                                    <h5 class="h6 mb-1">Quick Chat</h5>
                                    <p class="small text-muted mb-0">We'll discuss your biggest pain points and goals</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="badge bg-primary rounded-circle p-2 me-3">2</div>
                                </div>
                                <div>
                                    <h5 class="h6 mb-1">Free Analysis</h5>
                                    <p class="small text-muted mb-0">I'll identify opportunities to save you time</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="badge bg-primary rounded-circle p-2 me-3">3</div>
                                </div>
                                <div>
                                    <h5 class="h6 mb-1">Clear Proposal</h5>
                                    <p class="small text-muted mb-0">You'll get a fixed price and timeline</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CTA Section -->
                <div class="text-center py-5 bg-primary bg-opacity-10 rounded-3">
                    <h3 class="h4 mb-3">Ready to Get Started?</h3>
                    <p class="mb-4">The first conversation is free and could save you hours every week.</p>
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a href="tel:224-465-5871" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-telephone-fill me-2"></i>Call Now
                        </a>
                        <a href="mailto:paultrotter88@gmail.com" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-envelope-fill me-2"></i>Email Me
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
