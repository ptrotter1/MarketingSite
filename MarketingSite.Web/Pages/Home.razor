@page "/"
@attribute [StreamRendering]

<PageTitle>Home</PageTitle>

<main>
    <section class="p-3 py-5 mx-auto text-center border-bottom">
        <h1 class="display-4 fw-normal text-body-emphasis">
            Turn Your Daily Chaos into Streamlined Success
        </h1>
        <p class="fs-5 text-body-secondary">
            I help small businesses automate repetitive tasks, connect their systems,
            and save 10+ hours every week through custom software solutions.
        </p>
        <p class="fs-5 text-body-secondary">
            <a class="btn btn-primary" href="/contact">Get your free personalized audit</a>
        </p>
    </section>
    
    <!-- Services Section -->
    <section class="services py-5" id="services">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-5 fw-bold">Services</h2>
                    <p class="lead text-muted">Transforming your daily operations with custom technology solutions</p>
                </div>
            </div>

            <div class="row g-4">
                <!-- Process Automation Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-primary bg-gradient text-white mb-3 rounded-3 p-3 d-inline-block">
                                <i class="bi bi-gear-fill fs-3"></i>
                            </div>
                            <h3 class="h4 mb-3">Process Automation</h3>
                            <p class="text-muted mb-4">Still copying data between spreadsheets? Manually creating invoices? I build
                                custom tools that do the boring work for you.</p>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Automated report generation
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Data synchronization between systems
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Scheduled task automation
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Email and document automation
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- System Integration Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-success bg-gradient text-white mb-3 rounded-3 p-3 d-inline-block">
                                <i class="bi bi-link-45deg fs-3"></i>
                            </div>
                            <h3 class="h4 mb-3">System Integration</h3>
                            <p class="text-muted mb-4">Make your existing software talk to each other. No more double data entry.</p>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Connect Google Workspace with Microsoft 365
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Sync inventory with your website
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Integrate payment systems
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Unite your data sources
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Custom Business Applications Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="feature-icon bg-info bg-gradient text-white mb-3 rounded-3 p-3 d-inline-block">
                                <i class="bi bi-code-square fs-3"></i>
                            </div>
                            <h3 class="h4 mb-3">Custom Business Applications</h3>
                            <p class="text-muted mb-4">Off-the-shelf software doesn't fit? I create solutions tailored to YOUR
                                business.</p>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Custom databases
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Specialized calculators and tools
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Mobile data entry for field workers
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Customer portals
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <p class="lead mb-4">Ready to streamline your business operations?</p>
                    <a href="/contact" class="btn btn-primary px-5">Get Your Free Process Audit</a>
                </div>
            </div>
        </div>
    </section>
</main>